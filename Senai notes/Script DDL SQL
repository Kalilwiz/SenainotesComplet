CREATE DATABASE SenaiNotes;

USE SenaiNotes;

CREATE TABLE Usuarios(
	UserID INT PRIMARY KEY IDENTITY (1,1),
	Nome VARCHAR (200) NOT NULL,
	Email VARCHAR (200) NOT NULL,
	Senha VARCHAR (10) NOT NULL,
	DataCriacao DATETIME);


CREATE TABLE Notas(
	NotaID INT PRIMARY KEY IDENTITY(1,1),
	Titulo VARCHAR(50) NOT NULL,
	Texto TEXT NOT NULL,
	DataCriacao DATETIME NOT NULL,
	DataAlteracao DATETIME NOT NULL,
	Arquivado BIT NOT NULL,
	Imagem VARCHAR(255),
	UserID INT FOREIGN KEY REFERENCES Usuarios(UserID));

CREATE TABLE Tags(
	TagID INT PRIMARY KEY IDENTITY(1,1),
	Nome VARCHAR(50) NOT NULL);

CREATE TABLE TagNotas(
	TagNotaID INT PRIMARY KEY IDENTITY(1,1),
	NotaID INT FOREIGN KEY REFERENCES Notas(NotaID),
	TagID INT FOREIGN KEY REFERENCES Tags(TagID));

